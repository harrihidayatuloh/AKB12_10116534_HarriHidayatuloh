<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bio"
    android:orientation="vertical"
    android:background="@color/whitetwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/tvNamaPanggilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/nama_panggilan_kamu"
            android:textColor="@color/Hitam"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaPanggilan"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/rubik_regular"
            android:hint="@string/contoh_budi"
            android:inputType="text"
            android:paddingBottom="24dp" />

        <TextView
            android:id="@+id/tvUmur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNama"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/umur_kamu"
            android:textColor="@color/Hitam"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/edtUmur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUmur"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/rubik_regular"
            android:hint="@string/contoh_12"
            android:inputType="number"
            android:paddingBottom="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_gradient_rounded_corner"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/selanjutnya"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textAllCaps="false" />
    </RelativeLayout>

</LinearLayout>